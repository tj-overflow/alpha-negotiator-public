{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(GDB) Build and Debug Subfolder",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileDirnameBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "externalConsole": false,
            "cwd": "${fileDirname}",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // Make sure this name exactly matches the "label" in your new tasks.json
            "preLaunchTask": "C++: Build active subfolder (PowerShell)"
        }
    ]
}